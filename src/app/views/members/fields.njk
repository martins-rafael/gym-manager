<div class="item">
    <div>URL Avatar</div>
    <div>
        <input type="url" name="avatar_url" placeholder="http://" value="{{member.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{member.name}}">
    </div>
</div>
<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" value="{{member.email}}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth" value="{{member.birth}}">
    </div>
</div>
<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" {% if member.gender == "M" %} checked="checked" {% endif %}>
            Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if member.gender == "F" %} checked="checked" {% endif %}>
            Feminino</span>
    </div>
</div>
<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="disabled">Selecione um tipo</option>
            <option value="A1" {% if member.blood == "A1" %} selected="selected" {% endif %}>A+</option>
            <option value="A0" {% if member.blood == "A0" %} selected="selected" {% endif %}>A-</option>
            <option value="B1" {% if member.blood == "B1" %} selected="selected" {% endif %}>B+</option>
            <option value="B0" {% if member.blood == "B0" %} selected="selected" {% endif %}>B-</option>
            <option value="AB1" {% if member.blood == "AB1" %} selected="selected" {% endif %}>AB+</option>
            <option value="AB0" {% if member.blood == "AB0" %} selected="selected" {% endif %}>AB-</option>
            <option value="O1" {% if member.blood == "O1" %} selected="selected" {% endif %}>O+</option>
            <option value="O0" {% if member.blood == "O0" %} selected="selected" {% endif %}>O-</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input type="number" name="weight" value="{{member.weight}}">
    </div>
</div>
<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input type="number" name="height" value="{{member.height}}">
    </div>
</div>
<div class="item">
    <div>Instrutor</div>
    <div>
        <select name="instructor">
            {% for instructor in instructorsOptions %}
                <option value="{{instructor.id}}" {% if member.instructor_id == instructor %} selected="selected" {% endif %}>
                {{instructor.name}}
                </option>
            {% endfor %}
        </select>
    </div>
</div>

<button type="submit">Salvar</button>