{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <a class="button" href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}});"></span>
                            {{member.name}}
                        </td>
                        <td>{{member.email}}</td>
                        <td>{{member.weight}} kg</td>
                        <td>{{member.height}} cm</td>
                        <td>
                            <a class="button" href="/members/{{member.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}